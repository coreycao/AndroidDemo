<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    >

  <android.support.constraint.Guideline
      android:id="@+id/guideline1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.1"
      />

  <android.support.constraint.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.9"
      />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp"
      android:text="账户"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/editText5"
      app:layout_constraintTop_toTopOf="@+id/guideline1"
      />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp"
      android:text="密码"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/editText6"
      app:layout_constraintTop_toBottomOf="@+id/textView3"
      />

  <EditText
      android:id="@+id/editText5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="textEmailAddress"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
      app:layout_constraintLeft_toRightOf="@+id/textView3"
      app:layout_constraintRight_toRightOf="parent"
      />

  <EditText
      android:id="@+id/editText6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="textPassword"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
      app:layout_constraintLeft_toRightOf="@+id/textView4"
      app:layout_constraintRight_toRightOf="parent"
      />

  <Button
      android:id="@+id/button8"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp"
      android:text="登录"
      app:layout_constraintLeft_toLeftOf="@+id/textView4"
      app:layout_constraintRight_toRightOf="@+id/editText6"
      app:layout_constraintTop_toBottomOf="@+id/textView4"
      />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="注册"
      app:layout_constraintBottom_toTopOf="@+id/guideline2"
      app:layout_constraintLeft_toLeftOf="@+id/button8"
      app:layout_constraintRight_toLeftOf="@+id/textView6"
      app:layout_constraintTop_toBottomOf="@+id/button8"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="忘记密码"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
      app:layout_constraintLeft_toRightOf="@+id/textView5"
      app:layout_constraintRight_toRightOf="@+id/button8"
      />
</android.support.constraint.ConstraintLayout>
